(robin (0 . 1) (small (0 . 1) concurrency (0 . 1) crude-io (0 . 1))
  (bind input-loop
        (fun (self)
          (recv entered
            (if (equal? entered (literal quit))
              #f
              (if (equal? entered (literal ok))
                (self self)
                (send crude-output (pair (myself) entered)
                  (self self))))))
    (send crude-input (myself)
      (input-loop input-loop))))
